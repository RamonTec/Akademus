				$this -> db -> query("INSERT INTO direccion (n_casa, pto_ref, calle, tipo_v, sector)
				VALUES(:n_casa, :pto_ref, :calle, :tipo_v, :sector)");

				$this -> db -> bind(':n_casa', $datos['n_casa']);
				$this -> db -> bind(':pto_ref', $datos['pto_ref']);
				$this -> db -> bind(':calle', $datos['calle']);
				$this -> db -> bind(':tipo_v', $datos['tipo_v']);
				$this -> db -> bind(':sector', $datos['sector']);

				$this -> db -> execute();
				$id_dir = $this -> db -> lastInsertId();

				//Consulta de insersion en la tabla persona para el registro de estudiante
				$this -> db -> query("INSERT INTO persona (ci, pNombre, segNombre, pApellido, segApellido, sexo, nacionalidad, id_dir)
				VALUES(:ci, :pNombre, :segNombre, :pApellido, :segApellido, :sexo, :nacionalidad, :id_dir)");

				$this -> db -> bind(':ci', $datos['ci']);
				$this -> db -> bind(':pNombre', $datos['pNombre']);
				$this -> db -> bind(':segNombre', $datos['segNombre']);
				$this -> db -> bind(':pApellido', $datos['pApellido']);
				$this -> db -> bind(':segApellido', $datos['segApellido']);
				$this -> db -> bind(':sexo', $datos['sexo']);
				$this -> db -> bind(':nacionalidad', $datos['nacionalidad']);
				$this -> db -> bind(':id_dir', $id_dir, PDO::PARAM_INT);

				$this -> db -> execute();

				//Consulta de insersion en la tabla email para el registro de estudiante
				$this -> db -> query("INSERT INTO email (correo, tipo_correo)
				VALUES(:correo, :tipo_correo)");

				$this -> db -> bind(':correo', $datos['correo']);
				$this -> db -> bind(':tipo_correo', $datos['tipo_correo']);

				$this -> db -> execute();
				$id_correo = $this -> db -> lastInsertId();

				//Consulta de insersion en la tabla lugarN para el registro de estudiante
				$this -> db -> query("INSERT INTO lugarN (ciudad, estado, municipio)
				VALUES(:ciudad, :estado, :municipio)");

				$this -> db -> bind(':ciudad', $datos['ciudad']);
				$this -> db -> bind(':estado', $datos['estado']);
				$this -> db -> bind(':municipio', $datos['municipio']);

				$this -> db -> execute();
				$id_n = $this -> db -> lastInsertId();

				//Consulta de insersion en la tabla estudiante para el registro de estudiante
				$this -> db -> query("INSERT INTO estudiante (ci_escolar, tipo_est, fechaN, id_na, ci_est, id_correoE)
